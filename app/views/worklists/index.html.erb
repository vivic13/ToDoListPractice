
<h1> Vivian's To Do List </h1>

<ul>
 <% @worklists.each do |worklist| %>
  <li>
    <%= worklist.title %> </br>
    <%= worklist.duedate %> </br>
    <%= link_to 'Detail', worklist_path(worklist) ,class:"btn btn-info btn-xs"%>
    <%= link_to 'Edit', edit_worklist_path(worklist),class:"btn btn-primary btn-xs" %>
    <%= link_to 'Done&Delete', worklist_path(worklist), method: :delete, data:{ confirm: "Are you sure?"},class:"btn btn-danger btn-xs"%>
    </br></br>
  </li>
 <% end %>
</ul>

<%= link_to 'Add to-do-list?', new_worklist_path ,class:"btn btn-primary btn-xs"%>